{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES2022"
    ],
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "stripInternal": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "ES2022",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "examples/**",
    "dist/**"
  ]
}
